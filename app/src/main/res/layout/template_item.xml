<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/templateTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Template Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/more_horiz_24px"
                android:background="@drawable/circle_background"
                android:padding="4dp"
                app:tint="#35A7FF" />
        </LinearLayout>

        <TextView
            android:id="@+id/templateDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Template Description"
            android:textColor="#94989A"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/lastUsedContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clockIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/schedule_24px"
                app:tint="#94989A" />

            <TextView
                android:id="@+id/templateLastUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Used"
                android:textColor="#94989A"
                android:textSize="12sp"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>