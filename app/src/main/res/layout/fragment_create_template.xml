<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTemplate"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_background"
            android:backgroundTint="#E9EAEA"
            android:src="@drawable/arrow_back"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
        />

        <TextView
            android:id="@+id/exerciseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/material_dynamic_neutral20"
            android:text="New Template"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Template Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/etTemplateName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Template name"
            android:padding="8dp"
            android:textColor="#A8A8A8"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/more_vert_24px"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="More options" />
    </LinearLayout>

    <!-- Notes -->
    <EditText
        android:id="@+id/etNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes"
        android:background="@null"
        android:layout_marginTop="8dp" />

    <!-- Add Exercises Button -->
    <Button
        android:id="@+id/btnAddExercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Exercises"
        android:textAllCaps="false"
        android:layout_marginTop="24dp" />

</LinearLayout >